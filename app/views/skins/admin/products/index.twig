{% extends 'templates/template_admin.twig' %}
{%  block  content %}

    <h1>Товары</h1>
    <h3>Добавить товар <a href="/adminproducts/create/"><i class="glyphicon glyphicon-plus"></i></a> </h3>

    <table class="table table-hover">
        <tr>
            <th>id</th>
            <th>Название</th>
            <th>Изображение</th>
            <th>Кол-во</th>
            <th>Марка</th>
            <th>Цена</th>
            <th>Описание</th>
            <th>Категория</th>
            <th>редактировать</th>
            <th>удалить</th>
        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>
                    {% if product.img %}
                        <img width="100" height="100" src="{{ product.img }}" alt="{{ product.title }}">
                    {% else %}
                        <img width="100" height="100" src="/images/content/no-image.png" alt="no-img">
                    {% endif %}
                </td>
                <td>{{ product.count }}</td>
                <td>{{ product.mark }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>
                    {% for category in categories %}
                        {% if product.id_catalog == category.id %}
                        {{ category.title }}
                        {% endif %}
                    {% endfor %}
                </td>
                <td><a href="/adminproducts/edit/{{ product.id }}"><i class="glyphicon glyphicon-edit"></i></a></td>
                <td><a href="/adminproducts/delete/{{ product.id }}"><i class="glyphicon glyphicon-remove"></i></a></td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}