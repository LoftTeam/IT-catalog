{% extends 'templates/template_admin.twig' %}
{%  block  content %}

    <h1>Товары</h1>
    <table class="table table-hover">
        <tr>
            <th>id</th>
            <th>Название</th>
            <th>Изображение</th>
            <th>Кол-во</th>
            <th>Марка</th>
            <th>Цена</th>
            <th>Описание</th>
            <th>Категория</th>
            <th>Добавить</th>
            <th>редактировать</th>
            <th>удалить</th>
        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td><img width="100" height="100" src="{{ product.img }}" alt=""></td>
                <td>{{ product.count }}</td>
                <td>{{ product.mark }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.id_catalog }}</td>
                <td><a href=""><i class="glyphicon glyphicon-plus"></i></a></td>
                <td><a href=""><i class="glyphicon glyphicon-edit"></i></a></td>
                <td><a href=""><i class="glyphicon glyphicon-remove"></i></a></td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}