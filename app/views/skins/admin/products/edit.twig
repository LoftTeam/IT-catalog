{% extends 'templates/template_admin.twig' %}
{%  block  content %}

    <h1>Редактировать товар</h1>
    {% if result %}
        <p class="alert alert-success">{{ result }}</p>
    {% else %}
        {% if errors %}
            {% for error in errors %}
                <p class="alert alert-danger">{{ error }}</p>
            {% endfor %}
        {% endif  %}
        <form method="post">
            <div class="form-group">
                <label >Название товара</label>
                <input value="{{ product.title }}" name="product_name" type="text" class="form-control" placeholder="Название товара">
            </div>
            <div class="form-group">
                <label >Картинка</label>
                <input value="{{ product.img }}" name="product_img" type="text" class="form-control" placeholder="Пути к картинке">
            </div>
            <div class="form-group">
                <label >Бренд</label>
                <input value="{{ product.mark }}" name="mark" type="text" class="form-control" placeholder=Бренд>
            </div>
            <div class="form-group">
                <label >Кол-во</label>
                <input value="{{ product.count }}" name="count" type="text" class="form-control" placeholder="Кол-во">
            </div>
            <div class="form-group">
                <label >Цена</label>
                <input value="{{ product.price }}" name="price" type="text" class="form-control" placeholder="Цена">
            </div>
            <div class="form-group">
                <label >Описание</label>
                <textarea name="description" id="" cols="70" rows="10" placeholder="Описание">{{ product.description }}"</textarea>
            </div>
            <div class="form-group">
                <label >Категория</label>
                <select name="catalog_id">
                    {% for category in categories %}
                        <option {% if category.id == product.id_catalog %} selected="selected" {% endif %}
                                value="{{ category.id }}">{{ category.title }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <button name="submit" type="submit" class="btn btn-success">Создать</button>
        </form>
    {% endif %}
{% endblock %}