{% extends 'templates/template_admin.twig' %}
{%  block  content %}
   <h1>Заказы</h1>
   <table class="table table-hover">
      <tr>
         <th>№ заказа</th>
         <th>статус</th>
         <th>дата заказа</th>
         <th>Просмотр</th>
         <th>удалить</th>
      </tr>
      {% for order in orders %}
         <tr>
            <td>{{ order.id }}</td>
            <td>{{ order.status }}</td>
            <td>{{ order.date_order }}</td>
            <td><a href="/adminorders/view/{{ order.id }}"><i class="glyphicon glyphicon-eye-open"></i></a></td>

            <td><a href="/adminorders/delete/{{ order.id }}"><i class="glyphicon glyphicon-remove"></i></a></td>

         </tr>
      {% endfor %}

   </table>
{% endblock %}