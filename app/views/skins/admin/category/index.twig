{% extends 'templates/template_admin.twig' %}
{%  block  content %}

    <h1>Категории товаров</h1>
    <h3>Добавить категорию <a href="/admincategory/create/"><i class="glyphicon glyphicon-plus"></i></a> </h3>
    <table class="table table-hover">
        <tr>
            <th>id</th>
            <th>Название</th>
            <th>редактировать</th>
            <th>удалить</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td><a href="/admincategory/edit/{{ category.id }}"><i class="glyphicon glyphicon-edit"></i></a></td>
                <td><a href="/admincategory/delete/{{ category.id }}"><i class="glyphicon glyphicon-remove"></i></a></td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}