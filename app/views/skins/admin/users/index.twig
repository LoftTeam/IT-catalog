{% extends 'templates/template_admin.twig' %}
{%  block  content %}

   <h1>Пользователи</h1>
   <table class="table table-hover">
      <tr>
         <th>id</th>
         <th>Имя</th>
         <th>Фамилия</th>
         <th>Дата рождения</th>
         <th>Email</th>
         <th>Пароль</th>
         <th>Активность</th>
         <th>Роль</th>
         <th>Дата регистрации</th>
         <th>Последнее посещение</th>

         <th>Добавить</th>
         <th>редактировать</th>
         <th>удалить</th>
      </tr>
      {% for user in users %}
         <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.birthday }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.is_active }}</td>
            <td>{{ user.role }}</td>
            <td>{{ user.reg_date }}</td>
            <td>{{ user.last_update }}</td>

            <td><a href=""><i class="glyphicon glyphicon-plus"></i></a></td>
            <td><a href=""><i class="glyphicon glyphicon-edit"></i></a></td>
            <td><a href=""><i class="glyphicon glyphicon-remove"></i></a></td>
         </tr>
      {% endfor %}

   </table>

{% endblock %}