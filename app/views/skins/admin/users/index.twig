{% extends 'templates/template_admin.twig' %}
{%  block  content %}

   <h1>Пользователи</h1>

   <table class="table table-hover">
      <tr>
         <th>id</th>
         <th>Имя</th>
         <th>Фамилия</th>
         <th>Дата рождения</th>
         <th>Email</th>
         <th>Пароль</th>
         <th>Активность</th>
         <th>Роль</th>
         <th>Дата регистрации</th>
         <th>Последнее посещение</th>

         <th>редактировать</th>
         <th>удалить</th>
      </tr>
      {% for user in users %}
         <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.birthday }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.password }}</td>
            <td>{% if user.is_active == 1 %}
                     Активен
               {% else %}
                  Не активен
               {% endif %}
            </td>
            <td>{% if user.role == 0 %}
                  Позователь
               {% else %}
                  Администратор
               {% endif %}

            </td>
            <td>{{ user.reg_date }}</td>
            <td>{{ user.last_update }}</td>

            <td><a href="/adminusers/edit/{{ user.id }}"><i class="glyphicon glyphicon-edit"></i></a></td>
            <td><a href="/adminusers/delete/{{ user.id }}"><i class="glyphicon glyphicon-remove"></i></a></td>
         </tr>
      {% endfor %}

   </table>

{% endblock %}